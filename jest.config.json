{
  "preset": "@shelf/jest-mongodb",
  "roots": ["<rootDir>/src"],
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts", "!<rootDir>/src/**/index.ts"],
  "coverageDirectory": "coverage",
  "testEnvironment": "node",
  "transform": {
    ".+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  }
}

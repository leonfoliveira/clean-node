{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "resolveJsonModule": true,
    "paths": {
      "@/test/*": ["../test/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src", "test"]
}
